  <textarea class="form-control" rows="5" id="comment"></textarea>
  </div>
  </form>
</div>
<h3>Showing screenshot for <%= $user_url[0]%></h3>

<% f = Screencap::Fetcher.new($user_url[0].to_s) %>

<% @killit = $user_url[0].delete('.') %>
<% @dead = @killit.gsub('/',"") %>
<% @argh = @dead.delete(':') %>
<% @use = File.join('', @argh) %>
<% screenshot = f.fetch(:output => 'public/image.png')%>

